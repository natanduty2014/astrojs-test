---
import Document from "@/layouts/document.astro";
import { Button } from "@/components/Button";
import type { UserTypes } from "./types";
const response = await fetch(`https://api.github.com/users/samuelleao`);
const user: UserTypes = await response.json();
---
<Document title={user.name} description={user.bio} image={user.avatar_url}>
  <header class="py-32 container">
    <div class="flex items-center mb-4">
      <img
        src={user.avatar_url}
        alt={user.name}
        class="w-10 h-10 object-cover rounded-full mr-3 border-blue-600 border"
      />
      <h1 class="text-lg text-slate-50">{user.name}</h1>
    </div>
    <p class="text-base leading-loose text-slate-400 mb-10">{user.bio}</p>
    <a href="/sobre"><Button className="mt-4">Ir para p√°gina sobre</Button></a>
  </header>
</Document>

